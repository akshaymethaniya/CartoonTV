<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.google.android.youtube.player.YouTubeThumbnailView
                android:id="@+id/video_thumbnail_image_view"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <!--            <ImageView-->
            <!--                android:id="@+id/imagePlayIcon"-->
            <!--                android:layout_width="60dp"-->
            <!--                android:layout_height="60dp"-->
            <!--                android:layout_centerVertical="true"-->
            <!--                android:layout_centerHorizontal="true"-->
            <!--                android:src="@drawable/play_icon_white" />-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="9dp"
                android:translationY="-9dp"
                app:cardCornerRadius="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:padding="2dp"
                    android:text="10:15"
                    android:textColor="@color/textColor" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="7dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/categoryImgCardView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp" />

            <TextView
                android:id="@+id/video_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Title of Video"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />
            <!--            <TextView-->
            <!--                android:id="@+id/video_duration_label"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginStart="10dp"-->
            <!--                android:drawablePadding="2dp"-->
            <!--                android:textStyle="bold"-->
            <!--                android:gravity="center_vertical|end"-->
            <!--                android:text="24.33min"-->
            <!--                android:textSize="14sp" />-->
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>